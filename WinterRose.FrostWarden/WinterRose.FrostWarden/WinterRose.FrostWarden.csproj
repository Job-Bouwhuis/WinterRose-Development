<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="libbulletc-linux-x64.so" />
    <None Remove="libbulletc-linux-x86.so" />
    <None Remove="libbulletc-windows-x64.dll" />
    <None Remove="libbulletc-windows-x86.dll" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="libbulletc.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BulletSharp" Version="0.11.1" />
    <PackageReference Include="Raylib-cs" Version="7.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\WinterRose.ForgeGuard\WinterRose.ForgeGuard.csproj" />
    <ProjectReference Include="..\..\WinterRose\WinterRose\WinterRose.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="libbulletc-linux-x64.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="libbulletc-linux-x86.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="libbulletc-windows-x64.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="libbulletc-windows-x86.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Using Include="Raylib_cs.Raylib">
      <Alias>ray</Alias>
    </Using>
    <Using Include="System.Numerics" />
  </ItemGroup>

  <ItemGroup>
    <None Update="BulletSharp.dll.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
